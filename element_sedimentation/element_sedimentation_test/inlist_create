! inlist_create

&star_job

      show_log_description_at_start = .false.

      save_model_when_terminate = .true.
      save_model_filename = 'planet_create.mod'
      required_termination_code_string = 'center_entropy_lower_limit'
      
      ! new adiabatic, contracting initial model
      create_initial_model = .true.
      radius_in_cm_for_create_initial_model = 1.2d10 ! in cm ! 2 R_J = 1.399d10
      mass_in_gm_for_create_initial_model = 1.89813d30 ! 1 M_J in g
      initial_model_relax_num_steps = 0

      center_logP_1st_try_for_create_initial_model = 13d0
      entropy_1st_try_for_create_initial_model = 9d0

      abs_e01_tolerance_for_create_initial_model = 1d-4 ! mass
      abs_e02_tolerance_for_create_initial_model = 1d-2 ! radius
      
      ! Let initial model settle in for this many steps before changing anything else.
      initial_model_relax_num_steps = 0
	
      set_initial_age = .true.

/ !end of star_job

&controls

   ! mesh controls
   mesh_delta_coeff = 1d0
   
   ! solver tolerances
   use_gold2_tolerances = .false. ! wait a few steps
   steps_before_use_gold2_tolerances = 31
      
   warning_limit_for_max_residual = 1d99 ! off until evolve
   warn_when_large_virial_thm_rel_err = 1d99 ! off until evolve

   limit_for_rel_error_in_energy_conservation = 1d-5
   hard_limit_for_rel_error_in_energy_conservation = 1d-3
      
   convergence_ignore_equL_residuals = .true.

	! for create_initial_model
	initial_z = 1.74064d-2
	initial_y = 2.76522d-1
   
	! when to stop
   center_entropy_lower_limit = 9d0
   max_age = 1d6
   max_model_number = 500
!    max_timestep = 1d7

    max_resid_jump_limit = 1d18
    max_corr_jump_limit = 1d18


   ! atmosphere
   ! ==========
    atm_option = 'irradiated_grey'
    atm_irradiated_opacity = 'iterated'
    atm_irradiated_T_eq = 122d0
    atm_irradiated_max_iters = 500
    atm_irradiated_kap_v = 3.56762d-3
    atm_irradiated_P_surf = 1d4

   ! output to files and terminal
   
   ! history file
   do_history_file = .false.
   history_interval = 50
   
   ! profile
   write_profiles_flag = .false.
   profile_interval = 5
   max_num_profile_models=1000
   
   ! photo
   photo_interval = 10000

   ! terminal
	terminal_interval = 10
	write_header_frequency = 10

    ! other
    num_trace_history_values = 1
    trace_history_value_name(1) = 'center_entropy'

/
