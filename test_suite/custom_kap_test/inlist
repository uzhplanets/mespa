! This is the first inlist file that MESA reads when it starts.

! This file tells MESA to go look elsewhere for its configuration
! info. This makes changing between different inlists easier, by
! allowing you to easily change the name of the file that gets read.

&star_job
   load_saved_model = .true.
   load_model_filename = 'planet_create.mod'
   set_initial_age = .true.
   initial_age = 0e0
   set_initial_cumulative_energy_error = .true.
   new_cumulative_energy_error = 0d0

   save_model_when_terminate = .true.
   required_termination_code_string(:) = 'max_age'
   save_model_filename = 'planet_evolve_delayed.mod'

   write_profile_when_terminate = .true.
   filename_for_profile_when_terminate = 'profile_evolve_delayed.data'

   read_extra_star_job_inlist(1) = .true.
   extra_star_job_inlist_name(1) = 'inlist_shared'
/ ! end of star_job namelist


&eos
   read_extra_eos_inlist(1) = .true.
   extra_eos_inlist_name(1) = 'inlist_shared'
/ ! end of eos namelist


&kap
   kap_ctrl(7) = 0.9  ! scaling factor for the opacity window
   kap_ctrl(8) = 1d9
   read_extra_kap_inlist(1) = .true.
   extra_kap_inlist_name(1) = 'inlist_shared'
/ ! end of kap namelist


&controls
   ! stopping
   max_age = 5d9
   ! opacity
   use_other_kap = .false.  ! disable grain and cloud opacities
   use_other_opacity_factor = .true.  ! enable the opacity window
   ! output
   profile_data_prefix = 'profile_evolve_delayed'
   star_history_name = 'history_evolve_delayed.data'
   read_extra_controls_inlist(1) = .true.
   extra_controls_inlist_name(1) = 'inlist_shared'
/ ! end of controls namelist


&pgstar
   read_extra_pgstar_inlist(1) = .true.
   extra_pgstar_inlist_name(1) = 'inlist_pgstar'
/ ! end of pgstar namelist
